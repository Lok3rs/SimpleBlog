<%- include("partials/header") %>
<div class="container">
    <h1>Adding a new coment for <%= blog.title %></h1>
    <form action="/blog/<%= blog._id %>/comment" method="POST">
        <div class="form-group">
            <!-- <label for="commentAuthor">Author</label> -->
            <input type="text" name="comment[text]" class="form-control" id="commentAuthor">
            <label for="commentContent">Comment</label>
            <!-- <input type="text" name="comment[author]" class="form-control" id="commentContent"> -->
            <small class="form-text text-muted">
                Write something nice :-)
            </small>
            <input type="submit" value="Add Comment" class="btn btn-lg btn-primary mt-2">
        </div>
    </form>
</div>


<%- include("partials/footer") %>