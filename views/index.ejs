<%- include("partials/header")%>
<div class="container">
    <div class="row">
        <% blog.forEach((blog) => { %>
        <div class="col-12 col-md-6 col-lg-4 justify-content-center d-flex align-items-start">
            <div class="card mb-4">
                <img src="<%= blog.img %>" class="card-img-top" alt="Image of <%= blog.title %>">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                    <a href="/blog/<%=blog._id %>" class="btn btn-primary">View more</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>



<%- include("partials/footer")%>